.user {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 300rpx;
  background-color: rgba(0, 0, 0, 0.2);
}

.login {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.avatar{
  display: flex;
  flex-direction:column;
  align-items: center;
}
.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.about,.Recent{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  /* border-top: 1px solid rgba(0, 0, 0, 0.1); */
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  margin: 50rpx 0;
  padding-left: 20rpx;
}

