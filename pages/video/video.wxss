.header{
  display: block;
  font-size: 46rpx;
  font-weight: 800;
  color: #999;
  padding-left: 20rpx;
  padding-bottom: 30rpx;
}
.wrap{
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 0 20rpx 60rpx;
}
.video{
  width: 100%;
  height: 400rpx;
}
.img{
  width: 100%;
  height: 400rpx;
}
.title{
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx 0;
}
.dec{
  font-size: 24rpx;
  color: #999; 
}
.play{
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  top: 300rpx;
  right: 70rpx;
  z-index: 30;
  background-color: rgba(255, 255, 255, .5);
  border-radius: 50%;
}
.error{
  display: flex;
  font-size: 20rpx;
  justify-content: center;
  color: #999;
  padding-bottom: 30rpx;
}
.loading{
  display: flex;
  justify-content: center;
  padding-bottom: 20rpx;
}